        <activity
            android:name="org.yess.duckderby.game.MainMenu"
            android:label="Duck Derby" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.yess.duckderby.game.DuckDerbyGame"
            android:label="Duck Derby" >
        </activity>
        <activity
            android:name="org.yess.duckderby.game.HighScore"
            android:label="Duck Derby">
        </activity>
    </application>

