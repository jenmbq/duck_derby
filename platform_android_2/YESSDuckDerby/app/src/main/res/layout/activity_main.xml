<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/duckderby_background_color"
    tools:context=".MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:id="@+id/linearLayout">


        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="wrap_content"
            android:layout_height="350px"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/duck_derby_logo"
            />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/duckderby_buttonplay_color"
            android:text="Play Duck Derby"
            android:textSize="@dimen/button_text_size"
            android:id="@+id/button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/linearLayout"
            android:layout_alignRight="@+id/linearLayout"
            android:layout_alignEnd="@+id/linearLayout"
            android:layout_marginTop="@dimen/button_top_margin"
            android:onClick="navigateToGame" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/duckderby_buttonplay_color"
            android:text="Visit Website"
            android:textSize="@dimen/button_text_size"
            android:id="@+id/button3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/linearLayout"
            android:layout_alignRight="@+id/linearLayout"
            android:layout_alignEnd="@+id/linearLayout"
            android:layout_marginTop="@dimen/button_top_margin"
            android:onClick = "onGoToWebsiteClick"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/duckderby_buttonplay_color"
            android:text="Make a Donation"
            android:textSize="20sp"
            android:id="@+id/button4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/linearLayout"
            android:layout_alignRight="@+id/linearLayout"
            android:layout_alignEnd="@+id/linearLayout"
            android:layout_marginTop="@dimen/button_top_margin"
            android:onClick = "onDonateClick"/>

        <ImageView
            android:id="@+id/game_image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/duck_derby_banner"/>


    </LinearLayout>

</RelativeLayout>
